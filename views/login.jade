extends layout

block body
   .container
      br
      br
      .col-lg-6.col-lg-offset-3.panel.panel-default
         form(method='POST', action='/auth/login')
            - if (error!="")
               .alert.alert-dismissable.alert-danger
                  button(type="button" class="close" data-dismiss="alert") Ã—
                  p #{error}
            h2 Hey there! Please log in
            br
            .form-group
               label Username:
               input.form-control(type='text', name='username', required)
            .form-group
               label Password:
               input.form-control(type='password', name='password', required)
            div
               button.btn.btn-default.pull-right(type='submit') Log in
            br
            br
            br
   script(src='js/lib/jquery/jquery-2.1.3.min.js')
   script(src='bootstrap/js/bootstrap.js')